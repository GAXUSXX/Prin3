<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
		
		    <ImageView
		        android:id="@+id/star"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:layout_marginTop="40dp"
		        android:src="@drawable/star6"
		        android:onClick="recovery"
		        />

		    
		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:gravity="center">

		        <ImageView
		            android:id="@+id/imageView2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="10dp"
		            android:layout_weight="1"
		            android:src="@drawable/today_score" />

		        <ImageView
		            android:id="@+id/imageView3"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignParentTop="true"
		            android:layout_marginTop="10dp"
		            android:layout_toRightOf="@+id/imageView2"
		            android:layout_weight="1"
		            android:src="@drawable/max_score" />
		        
		     	<TextView
		     	    android:id="@+id/todayScore"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="50dp"
		            android:layout_marginRight="5dp"
		            android:layout_toLeftOf="@+id/ko1"
		            android:textSize="25dp"
		            android:text="0"/>
		     	<TextView
		     	    android:id="@+id/ko1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="50dp"
		            android:layout_marginRight="10dp"
		            android:layout_alignRight="@+id/imageView2"
		            android:textSize="25dp"
		            android:text="個"/>
		     	<TextView
		     	    android:id="@+id/totalScore"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="50dp"
		            android:layout_marginRight="5dp"
		            android:layout_toLeftOf="@+id/ko2"
		            android:textSize="25dp"
		            android:text="0" />
		     	<TextView
		     	    android:id="@+id/ko2"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="50dp"
		            android:layout_marginRight="10dp"
		            android:layout_alignRight="@+id/imageView3"
		            android:textSize="25dp"
		            android:text="個" />
		    </RelativeLayout>

		    <ImageView
		        android:id="@+id/imageView4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:layout_marginTop="30dp"
		        android:onClick="consumeStar"
		        android:src="@drawable/start" />

		    <RelativeLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content" >

		        <ImageView
		            android:id="@+id/imageView5"
		            android:layout_width="fill_parent"
		            android:layout_height="200dp"
		            android:layout_centerHorizontal="true"
		            android:layout_marginTop="10dp"
		            android:src="@drawable/item_set" />


		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent" >

		            <ImageView
		                android:id="@+id/set1"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginBottom="26dp"
		                android:layout_marginTop="83dp"
		                android:layout_weight="1"
		                android:src="@drawable/none" />

		            <ImageView
		                android:id="@+id/set2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="83dp"
		                android:layout_weight="1"
		                android:src="@drawable/none" />

		            <ImageView
		                android:id="@+id/set3"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="83dp"
		                android:layout_weight="1"
		                android:src="@drawable/none" />
			        </LinearLayout>

			        <ImageView
			            android:id="@+id/imageView6"
			            android:layout_width="fill_parent"
			            android:layout_height="200dp"
			            android:layout_alignTop="@id/imageView5"
			            android:layout_centerHorizontal="true"
			            android:layout_marginTop="180dp"
			            android:src="@drawable/item_set" />
		        	<ImageView
		        	    android:id="@+id/imageView12"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:layout_alignTop="@+id/imageView7"
		        	    android:layout_marginLeft="10dp"
		        	    android:layout_marginBottom="10dp"
		        	    android:src="@drawable/buy" />
		        	<ImageView
		        	    android:id="@+id/item0"
		        	    android:layout_width="wrap_content"
		        	    android:layout_height="wrap_content"
		        	    android:layout_above="@+id/imageView12"
		        	    android:layout_alignParentLeft="true"
		        	    android:layout_marginBottom="17dp"
		        	   	android:layout_marginLeft="10dp"
		        	    android:src="@drawable/none" />

				<ImageView
		            android:id="@+id/imageView7"
		            android:layout_width="fill_parent"
		            android:layout_height="480dp"
		            android:layout_alignTop="@id/imageView6"
		            android:layout_centerHorizontal="true"
		            android:layout_marginTop="140dp"
		            android:src="@drawable/item" />

		        <LinearLayout
		            android:id="@+id/linearLayout1"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_alignLeft="@+id/imageView12"
		            android:layout_below="@+id/imageView6"
		            android:layout_marginTop="62dp" >

		            <ImageView
		                android:id="@+id/item1"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:onClick="select"
		                android:src="@drawable/muteki5" />

		            <ImageView
		                android:id="@+id/item2"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:onClick="select"
		                android:src="@drawable/double1" />
		            <ImageView
		                android:id="@+id/item3"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:onClick="select"
		                android:src="@drawable/up10" />
		        </LinearLayout>

		        <LinearLayout
		            android:id="@+id/linearLayout2"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_alignLeft="@+id/linearLayout1"
		            android:layout_alignTop="@+id/linearLayout1"
		            android:layout_marginTop="100dp" >

		            <ImageView
		                android:id="@+id/item4"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:onClick="select"
		                android:src="@drawable/add5" />

		            <ImageView
		                android:id="@+id/item5"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:onClick="select"
		                android:src="@drawable/purin5" />

		            <ImageView
		                android:id="@+id/item6"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_weight="1"
		                android:onClick="select"
		                android:src="@drawable/add1" />
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:layout_alignLeft="@+id/linearLayout2"
		            android:layout_below="@+id/linearLayout2"
		            android:layout_weight="1" >

		            <ImageView
		                android:id="@+id/item7"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="20dp"
		                android:layout_weight="1"
		                android:onClick="select"
		                android:src="@drawable/up20" />

		            <ImageView
		                android:id="@+id/item8"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="20dp"
		                android:layout_weight="1"
		                android:onClick="select"
		                android:src="@drawable/resurrection" />

		            <ImageView
		                android:id="@+id/item9"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:layout_marginTop="20dp"
		                android:layout_weight="1"
		                android:onClick="select"
		                android:alpha="0"
		                android:src="@drawable/lock" />
		        </LinearLayout>

		        <LinearLayout
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_alignTop="@+id/item0"
		            android:layout_toRightOf="@+id/item0"
		            android:layout_marginLeft="5dp"
		            android:orientation="vertical" >

		            <TextView
		                android:id="@+id/name"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="20sp"/>

		            <TextView
		                android:id="@+id/desc"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="14sp"
		                android:layout_marginTop="10dp"
		                />

		            <TextView
		                android:id="@+id/unlock"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textSize="20sp"
		                android:layout_marginTop="35dp"
		                />
		        </LinearLayout>

		    </RelativeLayout>

	</LinearLayout>
</ScrollView>